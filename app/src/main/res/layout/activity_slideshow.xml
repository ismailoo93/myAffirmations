<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlideshowActivity">

    <ImageView
        android:id="@+id/slideshowView"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@+id/slideshowView" android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/slideshowView" android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="@+id/slideshowView"
        android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="@+id/slideshowView"
        android:visibility="invisible"/>
    <!--android:scaleType="centerCrop"
    android:visibility="visible"
    app:layout_constraintDimensionRatio="16:9"-->

</android.support.constraint.ConstraintLayout>